<script>
let currentSlideEnhanced = 0;
let selectedProduct = null;
let selectedSize = null;
let selectedPrice = 0;

// Initialize enhanced carousel
function initEnhancedCarousel() {
  updateCarouselEnhanced();
  
  // Add touch/swipe support
  addSwipeSupport();
}

function updateCarouselEnhanced() {
  const track = document.getElementById('enhancedCarouselTrack');
  const dots = document.querySelectorAll('.carousel-dots .dot');
  const prevBtn = document.getElementById('prevBtnEnhanced');
  const nextBtn = document.getElementById('nextBtnEnhanced');
  
  if (track) {
    track.style.transform = `translateX(-${currentSlideEnhanced * 25}%)`;
  }
  
  // Update dots
  dots.forEach((dot, index) => {
    dot.classList.toggle('active', index === currentSlideEnhanced);
  });
  
  // Update navigation buttons
  if (prevBtn) prevBtn.disabled = currentSlideEnhanced === 0;
  if (nextBtn) nextBtn.disabled = currentSlideEnhanced === 3;
}

function nextSlideEnhanced() {
  if (currentSlideEnhanced < 3) {
    currentSlideEnhanced++;
    updateCarouselEnhanced();
  }
}

function previousSlideEnhanced() {
  if (currentSlideEnhanced > 0) {
    currentSlideEnhanced--;
    updateCarouselEnhanced();
  }
}

function goToSlideEnhanced(index) {
  currentSlideEnhanced = index;
  updateCarouselEnhanced();
}

// Size selection
function selectSize(button, product, size, price) {
  // Remove selection from all size buttons
  document.querySelectorAll('.size-btn').forEach(btn => {
    btn.classList.remove('selected');
  });
  
  // Add selection to clicked button
  button.classList.add('selected');
  
  // Update selected values
  selectedProduct = product;
  selectedSize = size;
  selectedPrice = price;
  
  // Update add to cart section
  updateAddToCartSection();
}

function updateAddToCartSection() {
  const section = document.getElementById('addToCartSection');
  const title = document.getElementById('selectedOptionTitle');
  const priceDisplay = document.getElementById('selectedPrice');
  const details = document.getElementById('selectedDetails');
  const addBtn = document.getElementById('addToCartBtn');
  
  if (selectedProduct && selectedSize) {
    section.style.display = 'block';
    
    const productNames = {
      canvas: 'Gallery Canvas Print',
      framed: 'Premium Framed Print',
      metal: 'Metal Print',
      poster: 'Art Poster'
    };
    
    title.textContent = `${productNames[selectedProduct]} - ${selectedSize}"`;
    priceDisplay.textContent = `$${selectedPrice}`;
    details.textContent = `Ready to add your custom ${selectedProduct} print to cart`;
    addBtn.disabled = false;
    addBtn.textContent = `Add ${productNames[selectedProduct]} to Cart - $${selectedPrice}`;
  }
}

// Add to cart functionality
function addToCart() {
  if (!selectedProduct || !selectedSize) {
    alert('Please select a product type and size first.');
    return;
  }
  
  // Here you would integrate with your cart system
  alert(`Added to cart: ${selectedProduct} ${selectedSize}" for $${selectedPrice}`);
  
  // You can add actual Shopify cart integration here
  console.log('Adding to cart:', {
    product: selectedProduct,
    size: selectedSize,
    price: selectedPrice
  });
}

// Touch/swipe support
function addSwipeSupport() {
  const carousel = document.querySelector('.carousel-container');
  if (!carousel) return;
  
  let startX = 0;
  let isDragging = false;
  
  carousel.addEventListener('touchstart', (e) => {
    startX = e.touches[0].clientX;
    isDragging = true;
  });
  
  carousel.addEventListener('touchmove', (e) => {
    if (!isDragging) return;
    e.preventDefault();
  });
  
  carousel.addEventListener('touchend', (e) => {
    if (!isDragging) return;
    isDragging = false;
    
    const endX = e.changedTouches[0].clientX;
    const diffX = startX - endX;
    
    if (Math.abs(diffX) > 50) { // Minimum swipe distance
      if (diffX > 0) {
        nextSlideEnhanced();
      } else {
        previousSlideEnhanced();
      }
    }
  });
  
  // Mouse support for desktop
  carousel.addEventListener('mousedown', (e) => {
    startX = e.clientX;
    isDragging = true;
    carousel.style.cursor = 'grabbing';
  });
  
  carousel.addEventListener('mousemove', (e) => {
    if (!isDragging) return;
    e.preventDefault();
  });
  
  carousel.addEventListener('mouseup', (e) => {
    if (!isDragging) return;
    isDragging = false;
    carousel.style.cursor = 'grab';
    
    const endX = e.clientX;
    const diffX = startX - endX;
    
    if (Math.abs(diffX) > 50) {
      if (diffX > 0) {
        nextSlideEnhanced();
      } else {
        previousSlideEnhanced();
      }
    }
  });
  
  carousel.addEventListener('mouseleave', () => {
    isDragging = false;
    carousel.style.cursor = 'grab';
  });
}

// Update artwork images when new image is selected
function updateEnhancedPreviews(imageUrl) {
  const previewImages = [
    'canvas-preview-enhanced',
    'framed-preview-enhanced', 
    'metal-preview-enhanced',
    'poster-preview-enhanced'
  ];
  
  previewImages.forEach(id => {
    const img = document.getElementById(id);
    if (img) {
      img.src = imageUrl;
    }
  });
}

// Initialize when DOM is loaded
document.addEventListener('DOMContentLoaded', initEnhancedCarousel);

// Global function to activate enhanced interface
window.activateEnhancedPOD = function(imageUrl) {
  const interface = document.getElementById('pod-enhanced-interface');
  const oldInterface = document.getElementById('pod-interface');
  
  if (interface) {
    // Hide old interface
    if (oldInterface) oldInterface.style.display = 'none';
    
    // Show enhanced interface
    interface.style.display = 'block';
    
    // Update all preview images
    updateEnhancedPreviews(imageUrl);
    
    // Scroll to interface
    interface.scrollIntoView({ behavior: 'smooth' });
    
    console.log('Enhanced POD interface activated with image:', imageUrl);
  }
};
