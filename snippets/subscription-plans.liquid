  // Example Shopify integration:
  // window.location.href = `/cart/add?id=${getSubscriptionVariantId(planName, billingCycle)}&return_to=/checkout`;
}

// Initialize current plan display
document.addEventListener('DOMContentLoaded', function() {
  // Check current user tier and update button
  if (window.PiccatsoSubscription) {
    const currentTier = window.PiccatsoSubscription.currentUser.tier;
    const currentButton = document.querySelector(`[data-plan="${currentTier}"] .plan-button`);
    
    if (currentButton) {
      currentButton.textContent = 'Current Plan';
      currentButton.classList.add('current-plan');
    }
  }
});
</script>
