<script>
let billingCycle = 'monthly';

function toggleBilling(cycle) {
  billingCycle = cycle;
  
  // Update toggle appearance
  document.querySelectorAll('.toggle-option').forEach(option => {
    option.classList.remove('active');
  });
  event.target.classList.add('active');
  
  // Update pricing display
  if (cycle === 'annual') {
    document.querySelectorAll('.monthly-price').forEach(price => {
      price.style.display = 'none';
    });
    document.querySelectorAll('.annual-price').forEach(price => {
      price.style.display = 'block';
    });
  } else {
    document.querySelectorAll('.monthly-price').forEach(price => {
      price.style.display = 'block';
    });
    document.querySelectorAll('.annual-price').forEach(price => {
      price.style.display = 'none';
    });
  }
}

function selectPlan(planName) {
  if (planName === 'free') {
    // For free plan, just redirect to create page
    window.location.href = '/pages/create';
    return;
  }
  
  // For paid plans, this would integrate with Shopify's subscription system
